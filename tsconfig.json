{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./dist",
    "module": "es2015",
    "target": "es2019",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "allowJs": true,
    "newLine": "LF",
    "moduleResolution": "node"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "vendor", "**/*.spec.ts", "**/*.test.ts"]
}
